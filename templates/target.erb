<%= '+' * @hierarchy_level.to_i %> <%= @name %>
<% if @probe then -%>
probe = <%= @probe %>
<% end -%>

menu = <%= @menu %>
<% if @pagetitle then -%>
title = <%= @pagetitle %>
<% else -%>
title = <%= @menu %>
<% end -%>
<% if @host then -%>
host = <%= @host %>
<% end -%>
<% unless @alerts.empty? then -%>
alerts = <%= @alerts.join(',') %>
<% end -%>
<% if @nomasterpoll then -%>
nomasterpoll = yes
<% end -%>
<% unless @slaves.empty? then -%>
slaves = <%= @slaves.join(' ') %>
<% end -%>
<% if @remark then -%>
remark = <%= @remark %>
<% end -%>
<%- @options.sort.each do |key,value| -%>
<%= key %> = <%= value %>
<%- end -%>


